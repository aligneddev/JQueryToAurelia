{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src/",
    "outDir": "wwwroot/dist",
    "sourceMap": true,
    "target": "es5",
    "module": "amd",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["es2015", "dom"]
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./typings/index.d.ts",
    "./custom_typings/**/*.d.ts",
    "./wwwroot/jspm_packages/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "wwwroot/jspm_packages"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
